<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración de seguridad para producción -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Solo permitir HTTPS para el dominio de la API -->
        <domain includeSubdomains="true">api.mironline.io</domain>
        
        <!-- Certificate pinning para mayor seguridad -->
        <pin-set expiration="2026-01-01">
            <!-- SHA-256 hash del certificado de api.mironline.io -->
            <!-- NOTA: Este hash debe actualizarse con el certificado real -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <!-- Pin de respaldo -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Configuración para desarrollo local (solo en debug) -->
    <debug-overrides>
        <domain-config cleartextTrafficPermitted="true">
            <domain includeSubdomains="true">10.0.2.2</domain>
            <domain includeSubdomains="true">localhost</domain>
            <domain includeSubdomains="true">127.0.0.1</domain>
        </domain-config>
    </debug-overrides>
    
    <!-- Base config: Sin cleartext traffic por defecto -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Solo confiar en CAs del sistema -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>